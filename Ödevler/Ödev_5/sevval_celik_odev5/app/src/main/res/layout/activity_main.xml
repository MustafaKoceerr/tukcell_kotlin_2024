<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="932dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="104dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_profil_foreground" />

            <LinearLayout
                android:layout_width="169dp"
                android:layout_height="116dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:letterSpacing="0"
                    android:text="Shane Richar"
                    android:textAlignment="viewStart"
                    android:textColor="#00044D"
                    android:textSize="27sp"
                    app:lineHeight="32sp" />


                <TextView
                    android:id="@+id/subtitle_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:letterSpacing="0.1"
                    android:text="Photographer"
                    android:textAlignment="viewStart"
                    android:textColor="#999AB7"
                    android:textSize="20sp"
                    app:lineHeight="28sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/frame_3" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/vector" />
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="62dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="30dp"
                            android:layout_height="32dp"
                            android:fontFamily="@font/gilroy_medium"
                            android:text="98"
                            android:textAlignment="viewStart"
                            android:textColor="#00044D"
                            android:textSize="27sp"
                            app:lineHeight="32sp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_medium"
                            android:letterSpacing="0.1"
                            android:text="Photo"
                            android:textAlignment="viewStart"
                            android:textColor="#999AB7"
                            android:textSize="20sp"
                            app:lineHeight="28sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:fontFamily="@font/gilroy_medium"
                            android:letterSpacing="0"
                            android:text="10k"
                            android:textAlignment="viewStart"
                            android:textColor="#00044D"
                            android:textSize="27sp"
                            app:lineHeight="32sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:fontFamily="@font/gilroy_medium"
                            android:letterSpacing="0.1"
                            android:text="Followers"
                            android:textAlignment="viewStart"
                            android:textColor="#999AB7"
                            android:textSize="20sp"
                            app:lineHeight="28sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_medium"
                            android:letterSpacing="0.0"
                            android:text="920"
                            android:textAlignment="viewStart"
                            android:textColor="#00044D"
                            android:textSize="27sp"
                            android:typeface="normal"
                            app:lineHeight="32sp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_medium"
                            android:letterSpacing="0.1"
                            android:text="Following"
                            android:textAlignment="viewStart"
                            android:textColor="#999AB7"
                            android:textSize="20sp"
                            app:lineHeight="28sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="167dp"
                    android:layout_height="132dp"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/rectangle_48" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="167dp"
                    android:layout_height="132dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    app:srcCompat="@drawable/rectangle_61" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="390dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="167dp"
                    android:layout_height="132dp"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/rectangle_62" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="167dp"
                    android:layout_height="132dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    app:srcCompat="@drawable/rectangle_63" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="270dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/rectangle_64" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>