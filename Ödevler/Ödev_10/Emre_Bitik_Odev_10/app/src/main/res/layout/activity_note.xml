<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar.Overscan"
    tools:context=".MainActivity"
    tools:ignore="VisualLintBounds">

    <ListView
        android:id="@+id/listViewProducts"
        android:layout_width="406dp"
        android:layout_height="602dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="100dp"
        android:background="#A8C9E3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSearch"
        android:layout_width="238dp"
        android:layout_height="68dp"
        android:autofillHints=""
        android:background="#3F51B5"
        android:ems="10"
        android:hint="@string/search_note"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintBottom_toTopOf="@+id/listViewProducts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="VisualLintTextFieldSize" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="153dp"
        android:layout_height="68dp"
        android:background="#0FA89B"
        android:text="Add Note"
        app:layout_constraintBottom_toTopOf="@+id/listViewProducts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toEndOf="@+id/txtSearch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:shapeAppearanceOverlay="@style/Base.Theme.Emre_Bitik_Odev_10" />
</androidx.constraintlayout.widget.ConstraintLayout>